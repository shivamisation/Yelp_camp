<h3><%= campground.name %> </h3>
<img src="<%= campground.image %> " alt=image>

<% campground.comment.forEach(function(comment){ %>

   

 <p> <strong><%= comment.author %></strong> -- <%= comment.text %>  </p>


<% }) %> 

<% if(currentUser) { %> 
 
<h1>Add a new comment to <%= campground.name %> </h1>

<form action="/campgrounds/<%= campground._id %>/comments" method = "POST">
    <input type="text"  name="comment[text]" placeholder="text">
    <input type="text" name="comment[author]" placeholder="author">
    <button>done</button>
</form>

<% } %> 





